@model Source_Control_Final_Assignment.ViewModel.Register
@{
    ViewBag.Title = "Register";
}
  
        @using (Html.BeginForm("SaveRegisterDetails", "Employee", FormMethod.Post, new { @enctype = "multipart/form-data", id="form" }))
        {
    <div class="main" style="padding:0px">

        <div style="color:red;">@ViewBag.EmailError</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12 h2" style="color:green;">@ViewBag.Message</div>
        </div><br />
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="your_email"><i class="fa fa-user material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.FirstName, new { @Placeholder = "First Name" })
                                @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-user material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.LastName, new { @Placeholder = "Last Name" })
                                @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-envelope material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.Email, new { type = "Email", @Placeholder = "Email" })
                                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
                                <div id=div1></div>
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-unlock-alt material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.Password, new { type = "Password", @Placeholder = "Password" })
                                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-phone material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.Mobile, new { type = "Number", @Placeholder = "Mobile" })
                                @Html.ValidationMessageFor(a => a.Mobile, "", new { @class = "text-danger" })
                                <div id=div2></div>
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-money material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.Salary, new { type = "Number", @Placeholder = "Salary" })
                                @Html.ValidationMessageFor(a => a.Salary, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-calendar material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.empDOJ, new { type = "Date", @Placeholder = "Date of Joining" })
                                @Html.ValidationMessageFor(a => a.empDOJ, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><i class="fa fa-user-circle material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.employeeImage, new { type = "file", required = "required" })
                                @Html.ValidationMessageFor(a => a.employeeImage, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" onclick="validate()" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                        @Html.ActionLink("Already have account ?", "Login", "Employee")
                    </div>
                </div>
            </div>
        </section>

        <div style="color:red;">@Html.ValidationSummary()</div>
    </div>
        }


    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
