@model CS.PMA.BE.ViewModels.UserVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Register :: Product Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/UserTheme.css" rel="stylesheet" />
    <link rel="icon" href="~/product.png" type="image/imge_header">
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (Request.IsAuthenticated && Session["userEmail"] != null)
    {
        Response.Redirect("/Product/Home");
    }
    @using (Html.BeginForm())
    {
        <div class="main" style="padding:0px">


            <!-- Sign up form -->
            <section class="signup">
                <div class="container">
                    <div class="signup-content">
                        <div class="signup-form">
                            <h2 class="form-title">Sign up</h2>
                            <form method="POST" class="register-form" id="register-form">
                                <div class="form-group">
                                    <label for="your_email"><i class="fa fa-user material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.Name, new { @Placeholder = "Name" })

                                </div>
                                @Html.ValidationMessageFor(a => a.Name, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label><i class="fa fa-envelope material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.Email, new { type = "Email", @Placeholder = "Email" })
                                </div>
                                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label><i class="fa fa-unlock-alt material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.Password, new { type = "Password", @Placeholder = "Password" })

                                </div>
                                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                                <div class="form-group form-button">
                                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                </div>
                            </form>
                        </div>
                        <div class="signup-image">
                            <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                            @Html.ActionLink("Already have an account ?", "Login")
                           
                            <div style="color:red;">@ViewBag.EmailError</div>

                        </div>
                    </div>
                </div>
            </section>


        </div>

    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
