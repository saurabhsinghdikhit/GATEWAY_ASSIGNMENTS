<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/product.png" type="image/imge_header">
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/Content/card-layout.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <title>@ViewBag.Title :: Product Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (!Request.IsAuthenticated && Session["userEmail"] == null)
    {
        Response.Redirect("/User/Login");
    }
    <div id="navig" class="navbar navbar-dark navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Product/Dashboard"><img src="~/product.png" width="50px" height="50px" /></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="@ViewBag.Home">@Html.ActionLink("Home", "Dashboard", "Product")</li>
                    <li style="@ViewBag.Index">@Html.ActionLink("Product List", "Index", "Product")</li>
                    <li style="@ViewBag.Create">@Html.ActionLink("Add Product", "Create", "Product")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <li><a href="/User/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container">
        @RenderBody()
        <br /><br />
        <div class="container-fluid">
            <!--===== FOOTER =====-->
            <footer class="footer">
                <p class="footer__title">Saurabh Singh <a target="_blank" href="http://www.developersaurabh.ml">Visit My Website</a></p>
                <div class="footer__social">
                    <a href="mailto:saurabhurajput@gmail.com" class="footer__icon"><i class='bx bx-mail-send'></i></a>
                    <a target="_blank" href="https://www.facebook.com/profile.php?id=100005608683263" class="footer__icon"><i class='bx bxl-facebook'></i></a>
                    <a target="_blank" href="https://www.instagram.com/damn_rajput/" class="footer__icon"><i class='bx bxl-instagram'></i></a>
                    <a target="_blank" href="https://twitter.com/Saurabh89157654" class="footer__icon"><i class='bx bxl-twitter'></i></a>
                    <a target="_blank" href="https://www.linkedin.com/in/developersaurabhsingh/" class="footer__icon"><i class='bx bxl-linkedin'></i></a>
                </div>
                <p>&#169; 2020 copyright all right reserved</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/bootstrap")
    
    <script>
        setTimeout(function () {
            $('#nofication').fadeOut('fast');
        }, 4000);
    </script>
    @RenderSection("scripts", required: false)


</body>
</html>
